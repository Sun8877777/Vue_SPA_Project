.feedback {}

.feedback__title {
  font-size: 36px;
  padding-bottom: 135px;
  @include tablets {
    font-size: 30px;
    text-align: center;
    padding-bottom: 88px;
  }
  @include phones {
    font-size: 24px;
    text-align: left;
    padding-bottom: 86px;
  }
}

.feedback__form {
  width: 59%;
  @include desktop {
    width: 81.1%;
    padding-bottom: 32px;
  }
  @include tablets {
    font-size: 14px;
    width: 100%;
  }
  @include phones {
    padding-bottom: 30%;
  }
}