.user-info {
  width: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.user-info__desc {
  font-size: 18px;
  padding: 22px 0;
  line-height: 30px;
  width: 28%;
  text-indent: 11px;
  font-weight: 600;
}


.user-info__username {
  font-size: 72px;
  line-height: 60px;
  font-weight: 800;
}