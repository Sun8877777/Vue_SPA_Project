.socials {
  display: flex;
  align-items: center;
}

.socials__item {
  margin-right: 40px;

  &--footer {
    margin-right: 20px;
  }

  &:last-child {
    margin-right: 0;
  }
}

.socials__icon {
  width: 28px;
  height: 31px;
  display: block;
}

.socials__link--footer {
  display: block;
  padding: 10px;
  border: 1px solid white;
  border-radius: 50%;

  .socials__icon {
    fill: white;
    width: 28px;
    height: 28px;
  }
}