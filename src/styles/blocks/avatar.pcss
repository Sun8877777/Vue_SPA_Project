.avatar {
  display: flex;
  justify-content: center;
  align-items: center;
  // width: 55%;
}

.avatar__wrapper {
  display: block;
  width: 200px;
  height: 200px;
  max-width: 100%;
  overflow: hidden;
  border-radius: 50%;

  @include tablets {
    width: 170px;
  }
}

.avatar__pic {
  display: block;
  object-fit: cover;
  width: 100%;
  height: 100%;
}